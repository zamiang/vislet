#home
  margin-top: 50px
  min-height 100%

  header
    text-align center
    max-width: 400px
    margin: 0px auto
  
  .projects
    max-width: 600px
    margin: 0px auto
    .project-title
      margin: 80px 0px 50px
      franklin-gothic()
      text-align: center
      font-size: 28px

    .project
      margin-bottom: 20px
      display: block
      color: #333
      border-bottom: 1px solid $border-color
      padding-bottom: 20px
      &:last-child
        border-bottom: 0px solid
      .title
        width: 30%
        display: inline-block
        vertical-align: top
        franklin-gothic()
        text-transform: uppercase
        font-size: 16px
        line-height: 114%
        margin-top: 2px
        text-decoration: underline
      .description
        width: 70%
        display: inline-block
        vertical-align: top
        font-size: 20px
        line-height: 148%
