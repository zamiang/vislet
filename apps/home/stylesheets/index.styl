@import '../../../components/layout/stylesheets/stylus_lib.styl'

#home
  margin-top: 50px
  min-height 100%
  max-width 800px
  margin-left: auto
  margin-right: auto

  header
    text-align center
    max-width: 400px
    margin: 0px auto
  
  .projects
    max-width: 600px
    margin: 0px auto 80px
    .project-title
      margin: 80px 0px 0px
      franklin-gothic()
      text-transform uppercase
      text-align: center
      letter-spacing: 2px

    .border
      margin-top: 8px
    .project
      display: block
      margin: 40px 0px
      &:last-child
        border-bottom: 0px solid
      .title
        font-size: 26px
        line-height: 160%
      .description
        margin-top: 2px
        font-size: 20px
        line-height: 148%
      &:hover
        .title:before
          border-color: $highlight !important

html.wf-active
  #home .projects .project
    color: $default-font-color
