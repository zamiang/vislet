#three
  .map-svg-container
    max-width: 100%

#three-svg
  border: 1px solid $border-color
  background: url('/images/north-carolina.jpg')
  background-size: cover
  height: 400px
  width: 1054px
  @media screen and (max-width: 500px)
    width: 340px
    height: 400px

@media screen and (max-width: 500px)
  .map-svg-container
    margin-top: 20px

.north-carolina-svg-key
  position: absolute
  bottom: 18px
  left: 30px
  width: 495px

.circle
  pointer-events: none
  stroke: none

.select-container
  top: -39px

.tract
  stroke: #aaa

.graph-section
  border: 1px solid $border-color
  border-top: 0px solid
  padding: 20px
  margin-top: -20px
  margin-bottom: 20px

.bar-graph-section
  font-size: 12px
  color: rgba(0, 0, 0, 0.8)
  svg
    padding-right: 20px
    &:nth-child(4n)
      padding-right: 0px

  rect
    fill: rgba(0, 0, 0, 0.8)
  text
    fill: rgba(0, 0, 0, 0.8)
    text-anchor: end
    &.key-label
      font-weight: bold
    &.value-label
      font-weight: normal

.tract
  stroke: black
  stroke-width: 2px

.options-container
  position: absolute
  bottom: 18px
  right: 4px
  width: 247px
  line-height: 100%
  .option
    background: white
    border: 1px solid $border-color
    border-radius: 5px
    width: 66px
    height: 10px
    font-size: 12px
    color: black
    display: inline-block
    padding: 6px 6px
    line-height: 95%
    text-align: center
    margin-right: 3px
    margin-bottom: 3px
    transition: all 0.3s
    &:hover
      background: rgba(87, 144, 188, 0.2)
    &.active
      background: #5790BC
      color: white
      font-weight: bold
    &:nth-child(3n)
      margin-right: 0px

.bar-graph-section
  .heading-container
    width: 61%
    display: inline-block
    vertical-align: top
    margin-right: 30px
    margin-bottom: 30px
    h1
      text-align: left
  .key-container
    max-width: 279px
    display: inline-block
    vertical-align: top
    margin-top: 43px
    margin-left: 34px

