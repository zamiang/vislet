extends ../../../components/layout/templates/index

block head
  include ../../../components/layout/templates/common_head

append locals
  - assetPackage = 'brooklyn'
  - title = 'Brooklyn Building Sales 2002-2014'

block body
  #brooklyn
    header
      .heading.faux-underline-large Brooklyn Building Sales 2002-2014
      .sub-heading The goal of this project is to display sales in a readable and interesting way
    .graph-heading Neighborhood Name
    svg#brooklyn-svg( height='600px', width='600px' )
    .svg-graphs
      .svg-label Residential
      svg#brooklyn-residential-tally.svg-line-graph
      svg#brooklyn-residential-price-tally.svg-line-graph
      .svg-label Commercial
      svg#brooklyn-commercial-tally.svg-line-graph
      svg#brooklyn-commercial-price-tally.svg-line-graph

    svg#brooklyn-building-class.stacked-area-chart

   include text.html
