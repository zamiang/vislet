#brooklyn
  min-height 100%
  header
    text-align center
  .svg-graphs
    vertical-align: top
    display: inline-block
    width: 600px
  #brooklyn-svg
    border: 1px solid #ccc

.markdown-text
  font-size: 15px
  max-width: 550px

.commercial-sales
  display: none

.graph-heading
  franklin-gothic()
  letter-spacing: 1px
  text-align: center
  text-transform: uppercase

#brooklyn-building-class
  height: 250px
  width: 600px
  vertical-align: top
  display: inline-block

.tabs
  position: relative
  text-align: center
  border-bottom: 1px solid #ccc
  line-height: 150%
  .tab
    border: 1px solid #ddd
    border-bottom: 1px solid #ccc
    display: inline-block
    franklin-gothic()
    letter-spacing: 1px
    text-align: center
    text-transform: uppercase
    font-size: 12px
    padding: 4px 10px 0px 10px
    background-color: #f3f3f3
    color: #ccc
    cursor: pointer
    margin-bottom: -1px
    &.active
      border: 1px solid #ccc
      border-bottom: 1px solid white
      background-color: white
      color: #333
      margin-bottom: -1px
    &:last-child
      border-left: 0px solid      
