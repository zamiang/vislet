#brooklyn
  min-height 100%
  width: 1102px
  margin: 0px auto
  header
    .sub-heading
      text-align: left
      width: 100%
  .svg-graphs
    vertical-align: top
    display: inline-block
    width: 600px
    margin-top: -34px
  #brooklyn-svg
    border: 1px solid #f2f2f2
    background: url('/images/brooklyn.png')
  .graph-heading-container
    margin-bottom: 14px
    .circle-key, .graph-heading
      display: inline-block
      vertical-align: top
    .circle-key
      width: 40px
      height: 40px
      border-radius: 20px
      background: steelblue
    .graph-heading
      franklin-gothic()
      font-size: 32px
      letter-spacing: 1px
      text-transform: uppercase
      margin-left: 12px
      margin-top: 5px

.markdown-text
  font-size: 15px
  max-width: 550px

.commercial-sales
  display: none

.svg-building-class
  height: 250px
  width: 600px
  vertical-align: top
  display: inline-block

.sales-group
  margin-top: 10px

.tabs
  position: relative
  border-bottom: 1px solid #f2f2f2
  line-height: 150%
  .tab
    border: 1px solid #ddd
    border-bottom: 1px solid #E4E4E4
    display: inline-block
    franklin-gothic()
    letter-spacing: 1px
    text-align: center
    text-transform: uppercase
    font-size: 12px
    padding: 4px 10px 0px 10px
    background-color: #f3f3f3
    color: #ccc
    cursor: pointer
    margin-bottom: -1px
    &.active
      border: 1px solid #f2f2f2
      border-bottom: 1px solid white
      background-color: white
      color: #333
      margin-bottom: -1px
    &:first-child
      margin-left: 10px
    &:last-child
      .active
        border-left: 0px solid
