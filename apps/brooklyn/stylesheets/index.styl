#brooklyn
  min-height 100%
  width: 1102px
  margin: 0px auto
  header
    .sub-heading
      text-align: left
      width: 100%
  .svg-graphs
    vertical-align: top
    display: inline-block
    width: 600px
  .map-svg-container
    display: inline-block
    max-width: 500px
  #brooklyn-svg
    border: 1px solid #f2f2f2
    background: url('/images/brooklyn.png')
  .graph-heading-container
    margin-bottom: 1px
    margin-left: 14px
    height: 80px
    .circle-key, .graph-heading
      display: inline-block
      vertical-align: top
    .circle-key
      width: 20px
      height: 20px
      border-radius: 100%
      &.blue
        background: steelblue
      &.red
        background: hsl(353, 64%, 54%)
      &.gray
        background: lightgrey

    .graph-heading
      width: 90%
      franklin-gothic()
      line-height: 150%
      letter-spacing: 1px
      text-transform: uppercase
      margin-left: 10px
      margin-top: -1px
      font-size: 14px

.markdown-text
  font-size: 15px
  max-width: 550px

.commercial-sales
  display: none

.svg-building-class
  height: 250px
  width: 600px
  vertical-align: top
  display: inline-block

.sales-group
  margin-top: 10px
