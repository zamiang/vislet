.svg-slider
  font-size: 12px
  fill: $dark-gray
  user-select: none
  transition: opacity 0.2s
  opacity: 0
  &.visible
    opacity: 1

  .axis path, .axis line
    fill: none
    stroke: $dark-gray
    shape-rendering: crispEdges

  .handle
    transition: fill 0.2s
    fill: $dark-gray
    cursor: pointer
    &:hover
      fill: $highlight

  .tick
    text
      display: none
    line
      stroke: $gray
    &:nth-child(4n + 1)
      text
        display: block
      line
        stroke: $dark-gray
