.svg-map  
  .tract:hover
    fill: rgba(70, 130, 180, 0.2)
    
  .tract.selected
    fill: hsla(207, 44%, 50%, 0.9)
    stroke: rgb(70, 130, 180)
    
  .subunit-label 
    fill: #777
    fill-opacity: .5
    font-size: 2px
    text-anchor: middle
    pointer-events: none
    franklin-gothic()
  
  .park
    fill: #eee
    stroke: #777
  
  .label-text
    franklin-gothic()
    text-transform: uppercase
    fill: #333
    background-color: white
    font-size: 17px

.tract
