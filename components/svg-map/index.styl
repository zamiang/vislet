.svg-map
  font-size: 12px
  .tract
    cursor: pointer
    &:hover
      fill: $red
      transition fill 0.1s
    &.selected
      fill: hsla(207, 44%, 50%, 0.9)
      stroke: rgb(70, 130, 180)

  .subunit-label
    fill: #777
    fill-opacity: .5
    font-size: 2px
    text-anchor: middle
    pointer-events: none
    franklin-gothic()

  .label-text
    franklin-gothic()
    text-transform: uppercase
    fill: #333
  .hover-text
    text-transform: uppercase
    fill: #333

