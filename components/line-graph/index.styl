.svg-line-graph
  font-size: 12px
  fill: #333

  .tooltip-label
    paint-order: stroke
    stroke-width: 1px
    stroke-linecap: butt
    stroke-linejoin: miter
    stroke: #fff
    franklin-gothic()
    fill: #333

  .axis path, .axis line
    fill: none
    stroke: #333
    shape-rendering: crispEdges

  .x-axis path
    display: none
  
  .tooltips
    display: none

  .line 
    fill: none
    stroke: steelblue
    stroke-width: 1.5px
    &.mean-line
      stroke: lightgrey

  circle
    &.mean-circle
      stroke: lightgrey

  .label-text
    franklin-gothic()
    text-transform: uppercase
    fill: lightgrey
    background-color: white

.graph-keys
  font-size: 12px
  column-count: 3
  column-gap: 10px
  height: 100px
  .graph-key
    height: 29px
  .key-circle, .key-text
    display: inline-block
    vertical-align: top
  .key-text
    margin-top: 3px
    text-transform: capitalize
    line-height: 1
    height: 12px
    max-width: 140px
    text-overflow: ellipsis
  .key-circle
    width: 16px
    height: 16px
    border-radius: 8px
    margin-right: 5px
