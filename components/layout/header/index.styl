#main-layout-header
  position: fixed
  top: 0px
  text-align: left
  z-index: 11
  background: rgb(253,253,253)
  width: 100%
  border-bottom: 1px solid #e2e2e2
  padding-top: 11px
  color: #ccc
  text-align: center
  transition: all 0.2s ease-in-out
  height: 42px
  h1
    font-size: 16px
    margin: 0px
    display: inline-block
  a
    font-size: 16px
    display: inline-block
    padding-left: 10px
